<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TrolleybusApp.ViewModels"
        xmlns:models="using:TrolleybusApp.Models"
        x:Class="TrolleybusApp.Views.MainWindow"
        Title="Trolleybus App">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel Margin="10">
        <TextBlock Text="Список троллейбусов:" FontSize="16" FontWeight="Bold" />
        <ListBox ItemsSource="{Binding Trolleybuses}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Id}" FontWeight="Bold" />
                        <TextBlock Text="{Binding IsBroken, StringFormat='Состояние: {0}'}" />
                        <TextBlock Text="{Binding ArePolesOff, StringFormat='Штанги: {0}'}" /> <!-- отображение состояния штанг -->
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>